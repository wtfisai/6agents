{
  "name": "designsync-ai",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "deploy:dev": "pnpm build && firebase deploy --only hosting:dev",
    "deploy:prod": "pnpm build && firebase deploy --only hosting:prod",
    "setup": "bash scripts/setup.sh"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "vitest": "^1.0.0",
    "typescript": "^5.3.0"
  }
}
