{
  "name": "designsync-ai",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @designsync/web dev",
    "dev:api": "pnpm --filter @designsync/api dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "setup": "bash scripts/setup.sh"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "vitest": "^1.0.0",
    "typescript": "^5.3.0"
  }
}
